# ==============================================
# VRD Check-in System - Environment Variables
# ==============================================
# Copy this file to .env and fill in the values

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
DB_HOST=mysql.vrdsolution.com.br
DB_USER=vrdsolution01
DB_PASSWORD=your_db_password_here
DB_NAME=vrdsolution01
DB_PORT=3306

# ==============================================
# SECURITY (CRITICAL - NEVER COMMIT REAL VALUES)
# ==============================================
# Generate with: openssl rand -base64 32
# Or Python: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=REPLACE_THIS_WITH_RANDOM_32_BYTE_STRING
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760  # 10MB

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Email (for future use)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Environment
ENVIRONMENT=development
DEBUG=True

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100